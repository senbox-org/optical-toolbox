<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>opttbx-sta-adapters-otb</artifactId>
        <groupId>eu.esa.opt</groupId>
        <version>10.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>opttbx-otb-adapters-kit</artifactId>
    <packaging>nbm</packaging>

    <name>Sentinel-2 Toolbox OTB Adapters Module</name>
    <description>
        OTB tools integration in the Sentinel-2 Toolbox
    </description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.netbeans.utilities</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>nbm</goal>
                            <goal>cluster</goal>
                            <goal>autoupdate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>multivariate-alteration-detector</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>pansharpening-bayes</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>pansharpening-lmvm</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>pansharpening-rcs</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>segmentation-cc</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>segmentation-meanshift</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>segmentation-mprofiles</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>segmentation-watershed</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.esa.opt</groupId>
            <artifactId>sfstextureextraction</artifactId>
            <version>${opttbx.version}</version>
        </dependency>
    </dependencies>

</project>
